@model GhostRunner.ViewModels.Projects.Partials.ConfirmDeleteScriptModel

@using (Html.BeginForm("DeleteScript/" + Model.Script.ExternalId, "Projects", FormMethod.Post, new { @id = "delete-script" }))
{
    <div class="model-dialog panel">
        <div class="header">Delete Script</div>
        <div class="body">
            <div class="section">Are you sure you want to delete this script? It cannot be undone and removes task history.</div>
        </div>
        <div class="navigation">
            <div class="left"><input type="button" onclick="clearModalDialog();" value="Cancel" /></div>
            <div class="right"><input type="submit" value="Delete" /></div>
            <div class="clear"></div>
        </div>
    </div>
}
<script language="javascript" type="text/javascript">
    $.validator.unobtrusive.parse($("#delete-script"));
</script>