@model IList<PackageCache>

@if (Model.Count > 0)
{
    <table style="width: 100%">
        <thead>
            <tr>
                <th style="text-align:left">Package</th>
                <th style="width:90px;text-align:center">Version</th>
                <th style="width:90px;text-align:center">Cache</th>
                <th style="width:90px;text-align:right">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PackageCache packageCache in Model)
            {
                <tr>
                    <td style="text-align:left">@packageCache.Name</td>
                    <td style="width:90px;text-align:center">@packageCache.Version</td>
                    <td style="width:90px;text-align:center"><input type="checkbox" id="cache_@packageCache.ExternalId" name="storeCached" @if (packageCache.Store) { <text> checked="checked" </text> } onclick="updatePackageCache('@packageCache.ExternalId')" /></td>
                    <td style="width:90px;text-align:right"><input type="button" value="Delete" onclick="deletePackageCache('@packageCache.ExternalId')" /></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>There are currently no cached packages</div>
}
